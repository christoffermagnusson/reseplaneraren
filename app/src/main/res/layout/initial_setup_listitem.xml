<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/screenLabelImage"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/screenDescription"
        app:layout_constraintRight_toLeftOf="@+id/screenDescription"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.333" />

    <TextView
        android:id="@+id/screenDescription"
        android:layout_width="283dp"
        android:layout_height="47dp"
        android:layout_marginRight="8dp"
        android:text="Sök resa funktionen låter dig planera en resa i förväg"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>